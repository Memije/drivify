<div class="wrapper wrapper-content animated fadeInDown">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Tipos de Evaluaciones Teóricas</h5>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-md-12 p-sm">
              <%= link_to new_quiz_type_path do %>
                <span class="btn btn-primary"><i class="fa fa-plus"></i> Agregar Tipo de Evaluación Teórica</span>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="table-responsive">
                <table class="table table-hover" width="100%">
                  <thead>
                  <tr>
                    <th class="text-left">ID</th>
                    <th class="text-center">Tipo</th>
                    <th class="text-center">Número de Preguntas</th>
                    <th class="text-center">Número de Evaluaciones</th>
                    <th class="text-center">Acción</th>

                  </tr>
                  </thead>
                  <tbody>
                    <% @types.each do |type| %>
                      <tr>
                        <td class="text-left"><%= type.id %></td>
                        <td class="text-center"><%= type.nombre %></td>
                        <td class="text-center"><span class="badge badge-info"><%= type.questions.count %></span></td>
                        <td class="text-center"><span class="badge badge-info"><%= type.quizzes.count %></span></td>
                        <td class="text-center">
                          <%= link_to edit_quiz_type_path(type.id) do %>
                            <span class="btn btn-sm btn-warning" data-toggle="tooltip" data-placement="top" title="Editar"><i class="fa fa-pencil"></i></span>
                          <% end %>
                          <%= link_to destroy_quiz_type_path(type.id), method: :delete, data:{confirm: "Esta acción es irreversible, ¿Desea continuar?"} do %>
                            <span class="btn btn-sm btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar"><i class="fa fa-trash"></i></span>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :script do %>
  <script>

      $(function () {
          <%= render "js_partials/dataTable.js" %>
          $.select2("select");
      });

  </script>
<% end %>